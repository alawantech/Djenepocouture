rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Products collection rules
    match /products/{productId} {
      // Anyone can read products (for public website)
      allow read: if true;
      
      // Only authenticated users (admins) can write/update/delete products
      allow write, update, delete: if request.auth != null;
    }
    
    // Categories collection rules  
    match /categories/{categoryId} {
      // Anyone can read categories (for public filtering)
      allow read: if true;
      
      // Only authenticated users (admins) can write/update/delete categories
      allow write, update, delete: if request.auth != null;
    }
    
    // Default rule: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}